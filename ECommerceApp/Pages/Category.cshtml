@page "{id}"
@model ECommerceApp.Pages.CategoryModel

@{ ViewData["Title"] = "Category"; }

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
    </dl>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category.Products[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.Products[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.Products[0].Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Category.Products)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Category.Name)
    </td>
</tr>
}
    </tbody>
</table>

